<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SelectSuervey">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin20"
            android:gravity="center"
            android:text="Welcome Naresh"
            android:textColor="@color/color_black"
            android:textSize="@dimen/margin25" />

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin80"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Survey"
            android:layout_marginLeft="@dimen/margin60"
            android:textColor="@color/color_black"
            android:textSize="@dimen/margin15" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/addharbutton"
        android:layout_marginTop="@dimen/margin2"
        android:layout_marginHorizontal="@dimen/margin60"
        android:orientation="vertical">

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin40"
            android:layout_marginLeft="@dimen/margin30"

             />

    </LinearLayout>




    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin60"
        android:layout_marginHorizontal="@dimen/margin100"
        android:layout_marginTop="@dimen/margin40"
        android:text="Submit"
        android:textAllCaps="false" />
</LinearLayout>