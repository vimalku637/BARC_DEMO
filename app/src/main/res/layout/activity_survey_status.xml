<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SurveyStatus">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin7"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin90"
                android:layout_marginLeft="@dimen/margin3"
                android:layout_marginRight="@dimen/margin6"
                android:layout_weight="1"
                android:background="@android:color/holo_blue_dark"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin10"
                    android:layout_weight="1"
                    android:text="25"
                    android:textColor="@color/color_white"

                    android:textSize="25dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin6"
                    android:layout_weight="1"
                    android:text="Household Attempts"
                    android:textColor="@color/color_white"
                    android:textSize="13dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin90"
                android:layout_marginLeft="@dimen/margin3"
                android:layout_marginRight="@dimen/margin3"
                android:layout_weight="1"
                android:background="#b5651d"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin10"
                    android:layout_weight="1"
                    android:text="5"
                    android:textColor="@color/color_white"

                    android:textSize="25dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin6"
                    android:layout_weight="1"
                    android:text="Surveys Completed"
                    android:textColor="@color/color_white"
                    android:textSize="13dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin90"
                android:layout_marginLeft="@dimen/margin6"
                android:layout_marginRight="@dimen/margin3"
                android:layout_weight="1"
                android:background="@android:color/holo_red_dark"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin10"
                    android:layout_weight="1"
                    android:text="3"
                    android:textColor="@color/color_white"
                    android:textSize="25dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin6"
                    android:layout_weight="1"
                    android:text="Surveys Rejected"
                    android:textColor="@color/color_white"
                    android:textSize="13dp" />


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin20"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin90"
            android:layout_marginHorizontal="@dimen/margin35"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_dark"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin10"
                android:layout_weight="1"
                android:text="25"
                android:textColor="@color/color_white"
                android:textSize="25dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin6"
                android:layout_weight="1"
                android:text="Household Attempts"
                android:textColor="@color/color_white"
                android:textSize="13dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin90"
            android:layout_marginHorizontal="@dimen/margin35"
            android:layout_weight="1"
            android:background="@android:color/holo_green_light"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin10"
                android:layout_weight="1"
                android:text="5"
                android:textColor="@color/color_white"

                android:textSize="25dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin6"
                android:layout_weight="1"
                android:text="Surveys Completed"
                android:textColor="@color/color_white"
                android:textSize="13dp" />

        </LinearLayout>
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin10"
        android:padding="@dimen/margin5">


    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="@dimen/margin30"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/margin20"
        android:layout_marginRight="@dimen/margin10"
        android:background="@drawable/buttondrakgray"

        android:orientation="vertical">

        <TextView
            android:layout_width="150dp"
            android:layout_height="@dimen/margin30"
            android:gravity="center"
            android:textColor="@color/color_black"
            android:text=" Start Next Survey" />
    </LinearLayout>


</LinearLayout>