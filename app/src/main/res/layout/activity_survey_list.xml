<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".activities.SurveyListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/margin10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin7"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin90"
                    android:layout_marginLeft="@dimen/margin3"
                    android:layout_marginRight="@dimen/margin6"
                    android:layout_weight="1"
                    android:background="@android:color/holo_blue_dark"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_HouseHoldcount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin10"
                        android:layout_weight="1"
                        android:text="25"
                        android:textColor="@color/color_white"

                        android:textSize="25dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin6"
                        android:layout_weight="1"
                        android:text="Household Attempts"
                        android:textColor="@color/color_white"
                        android:textSize="13dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin90"
                    android:layout_marginLeft="@dimen/margin3"
                    android:layout_marginRight="@dimen/margin3"
                    android:layout_weight="1"
                    android:background="#b5651d"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_SurveysCompletedcount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin10"
                        android:layout_weight="1"
                        android:text="5"
                        android:textColor="@color/color_white"

                        android:textSize="25dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin6"
                        android:layout_weight="1"
                        android:text="Surveys Completed"
                        android:textColor="@color/color_white"
                        android:textSize="13dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin90"
                    android:layout_marginLeft="@dimen/margin6"
                    android:layout_marginRight="@dimen/margin3"
                    android:layout_weight="1"
                    android:background="@android:color/holo_red_dark"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_SurveysRejectedCount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin10"
                        android:layout_weight="1"
                        android:text="3"
                        android:textColor="@color/color_white"
                        android:textSize="25dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin6"
                        android:layout_weight="1"
                        android:text="Surveys Rejected"
                        android:textColor="@color/color_white"
                        android:textSize="13dp" />


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin20"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin90"
                android:layout_marginHorizontal="@dimen/margin35"
                android:layout_weight="1"
                android:background="@android:color/holo_blue_dark"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_teminated"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin10"
                    android:layout_weight="1"
                    android:text="25"
                    android:textColor="@color/color_white"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/tv_surveyHalt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin6"
                    android:layout_weight="1"
                    android:text="Household Terminated"
                    android:textColor="@color/color_white"
                    android:textSize="13dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin90"
                android:layout_marginHorizontal="@dimen/margin35"
                android:layout_weight="1"
                android:background="@android:color/holo_green_light"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_SurveysHaltCount"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin10"
                    android:layout_weight="1"
                    android:text="5"
                    android:textColor="@color/color_white"

                    android:textSize="25dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin6"
                    android:layout_weight="1"
                    android:text="Surveys Halt"
                    android:textColor="@color/color_white"
                    android:textSize="13dp" />

            </LinearLayout>
        </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/survey_status_in_your_cluster"
            android:gravity="center"
            android:textColor="@color/color_white"
            android:textStyle="bold"
            android:background="@color/color_blue_twitter"
            android:padding="@dimen/margin8"
            android:layout_margin="@dimen/margin10"
            />

        <TableLayout
            android:id="@+id/tb_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="*"
            android:layout_marginTop="@dimen/margin10"
            android:visibility="gone">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin8"
                android:background="@drawable/cell_border">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_arrow_drop_down_black"
                    android:text="@string/survey_id"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/text_16" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_arrow_drop_down_black"
                    android:text="@string/hh_name"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/text_16" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_arrow_drop_down_black"
                    android:text="@string/status"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/text_16" />
            </TableRow>
        </TableLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_survey_List"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin70"
            />

    </LinearLayout>

    <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_oops_no_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/oops_no_data_found"
            android:textStyle="italic"
            android:textSize="@dimen/text_16"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"
            />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" >
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_start_next_survey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_next_survey"
        android:backgroundTint="@color/color_white"
        android:paddingTop="@dimen/margin15"
        android:paddingBottom="@dimen/margin15"
        app:cornerRadius="@dimen/margin8"
        android:layout_marginEnd="@dimen/margin10"
        android:layout_alignParentEnd="true"
        android:textColor="@android:color/black"
        />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>