<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/tv_start_survey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start_survey"
        android:gravity="center"
        android:textSize="25dp"
        android:textColor="@android:color/white"
        android:padding="25dp"
        android:background="@drawable/start_survey_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/tv_edit_survey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/edit_survey"
        android:gravity="center"
        android:textSize="25dp"
        android:textColor="@android:color/white"
        android:padding="25dp"
        android:background="@drawable/edit_survey_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_start_survey"
        android:layout_marginTop="15dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>